<%- layout("/layouts/boilerplate") %>
<style>
  body {
    font-family: 'Roboto', sans-serif;
    background-color: #fff;
    overflow-x: hidden;
  }

  /* ---------------- HERO SECTION (UNCHANGED) ---------------- */
  .hero {
    height: 90vh;
    position: relative;
    overflow: hidden;
    width:100%;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 200%;
    background: url('https://images.unsplash.com/photo-1750003163474-c7578ff64162?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.1.0') center/cover no-repeat;
    animation: scrollBG 30s linear infinite;
    z-index: -1;
  }

  @keyframes scrollBG {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
    top: 50%;
    transform: translateY(-50%);
  }

  .hero h1 {
    font-size: 4rem;
    font-weight: 700;
  }

  .hero p {
    font-size: 1.5rem;
  }

  .btn-lg {
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-outline-light:hover {
    background-color: #ffc107;
    color: #000;
  }

  /* üåç Destination Highlights Section */
#destinations {
    padding: 80px 0;
    background-color: #faf6ff;
}

#destinations h2 {
    text-align: center;
    color: rgb(121, 41, 121);
    font-weight: 700;
    margin-bottom: 50px;
}

/* Destination Cards */
.destination-card {
    background: #fff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.destination-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(121, 41, 121, 0.3);
}

.destination-card img {
    width: 100%;
    height: 230px;
    object-fit: cover;
}

.destination-info {
    padding: 20px;
}

.destination-info h4 {
    font-weight: 700;
    color: #6a1b9a;
    margin-bottom: 10px;
}

.destination-info p {
    color: #555;
    font-size: 0.95rem;
}
  /* ---------------- ABOUT SECTION ---------------- */
  .about {
    background: linear-gradient(135deg, #faf6ff 0%, #fdfbff 100%);
    padding: 6rem 0;
  }

  .about h2 {
    color: rgb(121, 41, 121);
    font-weight: 700;
  }

  .about p {
    font-size: 1.1rem;
    max-width: 850px;
    margin: 1rem auto 0;
    color: #444;
    line-height: 1.7;
  }

  /* ---------------- VALUE CARDS ---------------- */
  .value-cards {
    margin-top: 3rem;
  }

  .value-card {
    background: #fff;
    border-radius: 1rem;
    padding: 2rem 1rem;
    box-shadow: 0 3px 15px rgba(121, 41, 121, 0.08);
    transition: transform 0.3s ease;
    border-top: 4px solid rgb(121, 41, 121);
  }

  .value-card:hover {
    transform: translateY(-8px);
  }

  .value-card i {
    font-size: 2.5rem;
    color: rgb(121, 41, 121);
    margin-bottom: 1rem;
  }

  
</style>

