<%- layout("/layouts/boilerplate") %>
<div class="container-fluid container">

<div class="row">
    <div class="col-8 offset-2 mt-5 ">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <h1 class="text-center mb-4 text-purple  new-create ms-4"><b>Login</h1>

            <div class="row mb-3 offset-3 " >
                <div class="col-md-8">
                    <label for="title" class="form-label text-purple">Username</label>
                    <input type="text" name="username" placeholder="username" class="form-control" required>
                    <!-- <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">username should be valid</div> -->

                </div>


                <div class="col-md-8">
                    <label for="title" class="form-label text-purple">Password</label>
                    <input type="password" name="password" placeholder="password" class="form-control" required>
                    <!-- <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">password should be valid</div> -->

                </div>
            </div>

            <div class="text-center">
               <button class="btn btn-success add-btn px-4">Login</button>
               <br><br>

               <p class="mt-3">
                  Don't have an account?
                  <a href="/signup" class="text-purple fw-bold" style="text-decoration: none;">
                  Sign up here
                  </a>
               </p>
            </div>
        </form>
    </div>
</div>
</div>